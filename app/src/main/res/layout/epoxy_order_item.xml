<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/whence"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/date"
        app:layout_constraintEnd_toStartOf="@+id/where"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Москва -" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="7dp"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/type"
        app:layout_constraintStart_toEndOf="@+id/date"
        app:layout_constraintTop_toBottomOf="@+id/where"
        tools:text="50 тыс. Р" />

    <TextView
        android:id="@+id/where"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/cost"
        app:layout_constraintEnd_toStartOf="@+id/type"
        app:layout_constraintStart_toEndOf="@+id/whence"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Геленджик" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="149dp"
        android:layout_height="27dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/where"
        app:layout_constraintTop_toBottomOf="@+id/type">

        <TextView
            android:id="@+id/weight"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="13dp"
            app:layout_constraintBottom_toTopOf="@+id/type"
            app:layout_constraintEnd_toStartOf="@+id/volume"
            app:layout_constraintStart_toEndOf="@+id/where"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="20 т" />

        <TextView
            android:id="@+id/volume"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="13dp"
            app:layout_constraintBottom_toTopOf="@+id/type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/weight"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="82 м в кубе" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:id="@+id/type"
        android:layout_width="151dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="7dp"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cost"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat"
        tools:text="Рефрежератор" />

    <TextView
        android:id="@+id/date"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="7dp"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whence"
        tools:text="7 июня" />

</androidx.constraintlayout.widget.ConstraintLayout>