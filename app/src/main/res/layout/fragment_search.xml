<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText_whence"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:hint="Откуда"
        android:text=""
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="10dp" />

    <EditText
        android:id="@+id/editText_where"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:hint="Куда"
        android:text=""
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="135dp" />

    <EditText
        android:id="@+id/editText_weight"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="Вес,т"
        android:text=""
        android:inputType="number"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="260dp" />

    <EditText
        android:id="@+id/editText_volume"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="Объем,м3"
        android:text=""
        android:inputType="number"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="260dp" />

    <EditText
        android:id="@+id/editText_body_type"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="Тип кузова"
        android:text=""
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="365dp" />

    <EditText
        android:id="@+id/editText_shipment_date"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="Дата погрузки"
        android:text=""
        android:inputType="date"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="365dp" />

    <Button
        android:id="@+id/button_clean"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="ОЧИСТИТЬ"
        android:textColor="#FF0000"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="500dp" />

    <Button
        android:id="@+id/button_save_filters"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="СОХРАНИТЬ ФИЛЬТР"
        android:textColor="#0000FF"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="250dp"
        tools:layout_editor_absoluteY="500dp" />

    <Button
        android:id="@+id/button_search_shipments"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:text="НАЙТИ ГРУЗЫ"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="#1E90FF"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="650dp" />
</android.support.constraint.ConstraintLayout>