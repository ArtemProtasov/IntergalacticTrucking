<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/whence"
                android:layout_width="400dp"
                android:layout_height="120dp"
                android:hint="Откуда"
                android:text=""
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="10dp" />

            <EditText
                android:id="@+id/where"
                android:layout_width="400dp"
                android:layout_height="120dp"
                android:hint="Куда"
                android:text=""
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="135dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/weight"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:hint="Вес,т"
                    android:inputType="number"
                    android:text=""
                    tools:layout_editor_absoluteX="5dp"
                    tools:layout_editor_absoluteY="260dp" />

                <EditText
                    android:id="@+id/volume"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:hint="Объем,м3"
                    android:inputType="number"
                    android:text=""
                    tools:layout_editor_absoluteX="205dp"
                    tools:layout_editor_absoluteY="260dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/bodytype"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:hint="Тип кузова"
                    android:text=""
                    tools:layout_editor_absoluteX="5dp"
                    tools:layout_editor_absoluteY="365dp" />

                <EditText
                    android:id="@+id/shipmentdate"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:hint="Дата погрузки"
                    android:inputType="date"
                    android:text=""
                    tools:layout_editor_absoluteX="205dp"
                    tools:layout_editor_absoluteY="365dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/clean"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:background="#FFFFFF"
                    android:text="ОЧИСТИТЬ"
                    android:textColor="#FF0000"
                    tools:layout_editor_absoluteX="5dp"
                    tools:layout_editor_absoluteY="500dp" />

                <Button
                    android:id="@+id/savefilters"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:background="#FFFFFF"
                    android:text="СОХРАНИТЬ ФИЛЬТР"
                    android:textColor="#0000FF"
                    tools:layout_editor_absoluteX="250dp"
                    tools:layout_editor_absoluteY="500dp" />

            </LinearLayout>

            <Button
                android:id="@+id/sendOrder"
                android:layout_width="400dp"
                android:layout_height="80dp"
                android:background="#1E90FF"
                android:text="НАЙТИ ГРУЗЫ"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="650dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutOrders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.airbnb.epoxy.EpoxyRecyclerView
            android:id="@+id/epoxyRecyclerViewOrders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButtonCloseOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>