<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/whence"
            android:layout_width="400dp"
            android:layout_height="120dp"
            android:hint="Откуда"
            android:text=""
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="10dp" />

        <EditText
            android:id="@+id/where"
            android:layout_width="400dp"
            android:layout_height="120dp"
            android:hint="Куда"
            android:text=""
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="135dp" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:hint="Вес,т"
            android:inputType="number"
            android:text=""
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="260dp" />

        <EditText
            android:id="@+id/volume"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:hint="Объем,м3"
            android:inputType="number"
            android:text=""
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="260dp" />

        <EditText
            android:id="@+id/bodytype"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:hint="Тип кузова"
            android:text=""
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="365dp" />

        <EditText
            android:id="@+id/shipmentdate"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:hint="Дата погрузки"
            android:inputType="date"
            android:text=""
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="365dp" />

        <Button
            android:id="@+id/clean"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:text="ОЧИСТИТЬ"
            android:textColor="#FF0000"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="500dp" />

        <Button
            android:id="@+id/savefilters"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:text="СОХРАНИТЬ ФИЛЬТР"
            android:textColor="#0000FF"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="500dp" />

        <Button
            android:id="@+id/searchshipments"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:background="#1E90FF"
            android:text="НАЙТИ ГРУЗЫ"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="650dp" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>